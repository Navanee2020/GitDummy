<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Live Text Editor</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body class="p-4">

  <div class="container">
    <h4 class="mb-3">Live Text Editor</h4>
    <div class="row mb-3 align-items-center">
      <div class="col-md-3">
        <select id="fontSizeSelect" class="form-select">
          <option value="12px" selected>12px</option>
          <option value="16px">16px</option>
          <option value="20px">20px</option>
        </select>
      </div>

      <div class="col-md-3">
        <select id="fontColorSelect" class="form-select">
          <option value="black" selected>Black</option>
          <option value="blue">Blue</option>
          <option value="red">Red</option>
        </select>
      </div>

      <div class="col-md-4">
        <div class="btn-group">
          <button id="boldBtn" class="btn btn-outline-dark">Bold</button>
          <button id="italicBtn" class="btn btn-outline-dark">Italic</button>
          <button id="resetBtn" class="btn btn-outline-secondary">Reset</button>
        </div>
      </div>

    </div>

    <textarea
      id="editor"
      class="form-control"
      rows="8"
      placeholder="Type your content here..."
    ></textarea>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {

      const editor = document.getElementById("editor");
      const fontSizeSelect = document.getElementById("fontSizeSelect");
      const fontColorSelect = document.getElementById("fontColorSelect");
      const boldBtn = document.getElementById("boldBtn");
      const italicBtn = document.getElementById("italicBtn");
      const resetBtn = document.getElementById("resetBtn");

      editor.style.fontSize = "12px";
      editor.style.color = "black";
      editor.style.fontWeight = "normal";
      editor.style.fontStyle = "normal";

      fontSizeSelect.addEventListener("change", function () {
        editor.style.fontSize = fontSizeSelect.value;
      });

      fontColorSelect.addEventListener("change", function () {
        editor.style.color = fontColorSelect.value;
      });

      boldBtn.addEventListener("click", function () {
        boldBtn.classList.toggle("active");
        editor.style.fontWeight =
          boldBtn.classList.contains("active") ? "bold" : "normal";
      });

      italicBtn.addEventListener("click", function () {
        italicBtn.classList.toggle("active");
        editor.style.fontStyle =
          italicBtn.classList.contains("active") ? "italic" : "normal";
      });

      resetBtn.addEventListener("click", function () {
        editor.style.fontSize = "12px";
        editor.style.color = "black";
        editor.style.fontWeight = "normal";
        editor.style.fontStyle = "normal";

        fontSizeSelect.value = "12px";
        fontColorSelect.value = "black";

        boldBtn.classList.remove("active");
        italicBtn.classList.remove("active");
      });
    });
  </script>
</body>
</html>
