Singly Linked List â€“ Deletion Operations (Using struct)
#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};
Node* insertEnd(Node* head, int value) {
    Node* newNode = new Node();
    newNode->data = value;
    newNode->next = NULL;

    if (head == NULL)
        return newNode;

    Node* temp = head;
    while (temp->next != NULL)
        temp = temp->next;

    temp->next = newNode;
    return head;
}

Node* deleteAtBeginning(Node* head) {
    if (head == NULL) {
        cout << "List is empty\n";
        return NULL;
    }

    Node* temp = head;
    head = head->next;
    delete temp;

    return head;
}
Node* deleteAtEnd(Node* head) {
    if (head == NULL) {
        cout << "List is empty\n";
        return NULL;
    }

    if (head->next == NULL) {
        delete head;
        return NULL;
    }

    Node* temp = head;
    while (temp->next->next != NULL)
        temp = temp->next;

    delete temp->next;
    temp->next = NULL;

    return head;
}
Node* deleteAtPosition(Node* head, int position) {
    if (head == NULL || position <= 0) {
        cout << "Invalid operation\n";
        return head;
    }

    if (position == 1)
        return deleteAtBeginning(head);

    Node* temp = head;
    for (int i = 1; i < position - 1 && temp->next != NULL; i++)
        temp = temp->next;

    if (temp->next == NULL) {
        cout << "Position out of range\n";
        return head;
    }

    Node* delNode = temp->next;
    temp->next = delNode->next;
    delete delNode;

    return head;
}
Node* deleteByValue(Node* head, int key) {
    if (head == NULL) {
        cout << "List is empty\n";
        return NULL;
    }

    if (head->data == key)
        return deleteAtBeginning(head);

    Node* temp = head;
    while (temp->next != NULL && temp->next->data != key)
        temp = temp->next;

    if (temp->next == NULL) {
        cout << "Element not found\n";
        return head;
    }

    Node* delNode = temp->next;
    temp->next = delNode->next;
    delete delNode;

    return head;
}
void display(Node* head) {
    if (head == NULL) {
        cout << "List is empty\n";
        return;
    }

    Node* temp = head;
    while (temp != NULL) {
        cout << temp->data << " -> ";
        temp = temp->next;
    }
    cout << "NULL\n";
}

int main() {
    Node* head = NULL;

    head = insertEnd(head, 10);
    head = insertEnd(head, 20);
    head = insertEnd(head, 30);
    head = insertEnd(head, 40);

    cout << "Initial List:\n";
    display(head);

    head = deleteAtBeginning(head);
    cout << "\nAfter deleting at beginning:\n";
    display(head);

    head = deleteAtEnd(head);
    cout << "\nAfter deleting at end:\n";
    display(head);

    head = deleteAtPosition(head, 2);
    cout << "\nAfter deleting at position 2:\n";
    display(head);

    head = deleteByValue(head, 30);
    cout << "\nAfter deleting element 30:\n";
    display(head);

    return 0;
}
